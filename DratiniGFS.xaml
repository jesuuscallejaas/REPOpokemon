<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="IPOkemonApp.DratiniGFS"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControlPokemon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" PreviewKeyDown="controlTeclas"
	Loaded="DratiniGFS_Loaded"
	>

	<UserControl.Resources>


		<Storyboard x:Name="estadoDerrotado" x:Key="estadoDerrotadoKey">
			<!-- Animación de escala en el eje X -->
			<DoubleAnimation
        Storyboard.TargetName="scaleTransformPokemon"
        Storyboard.TargetProperty="ScaleX"
        From="1"
        To="0.85"
        Duration="0:0:0.2"
        AutoReverse="False"
        RepeatBehavior="2x"
        EnableDependentAnimation="True"/>

			<!-- Animación de escala en el eje Y -->
			<DoubleAnimation
        Storyboard.TargetName="scaleTransformPokemon"
        Storyboard.TargetProperty="ScaleY"
        From="1"
        To="0.85"
        Duration="0:0:0.2"
        AutoReverse="False"
        RepeatBehavior="2x"
        EnableDependentAnimation="True"/>
			<!-- Estas animaciones comienzan después de las animaciones de escala -->

			<!-- Giro del canvasPokemon 90 grados hacia la izquierda -->
			<DoubleAnimation
        Storyboard.TargetName="rotateTransform"
        Storyboard.TargetProperty="Angle"
        From="0"
        To="-90"
        Duration="0:0:1"
        BeginTime="0:0:0.4"
        EnableDependentAnimation="True"/>
			<!-- Comienza después de las animaciones de escala -->

			<!-- Desvanecer OjoDERCanvas a opacidad 0 -->
			<DoubleAnimation
        Storyboard.TargetName="OjoDERCanvas"
        Storyboard.TargetProperty="Opacity"
        From="1"
        To="0"
        Duration="0:0:0.1"
        BeginTime="0:0:0.4"
        EnableDependentAnimation="True"/>
			<!-- Comienza después del giro -->

			<!-- Desvanecer OjoIZQCanvas a opacidad 0 -->
			<DoubleAnimation
        Storyboard.TargetName="OjoIZQCanvas"
        Storyboard.TargetProperty="Opacity"
        From="1"
        To="0"
        Duration="0:0:0.1"
        BeginTime="0:0:0.4"
        EnableDependentAnimation="True"/>
			<!-- Comienza después del giro -->

			<!-- Mostrar la imagen de la cruz en la posición de OjoDERCanvas -->
			<ObjectAnimationUsingKeyFrames
        Storyboard.TargetName="ImagenCruzDER"
        Storyboard.TargetProperty="Visibility">
				<DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="Visible" />
			</ObjectAnimationUsingKeyFrames>

			<!-- Mostrar la imagen de la cruz en la posición de OjoIZQCanvas -->
			<ObjectAnimationUsingKeyFrames
        Storyboard.TargetName="ImagenCruzIZQ"
        Storyboard.TargetProperty="Visibility">
				<DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="Visible" />
			</ObjectAnimationUsingKeyFrames>
		</Storyboard>
		<Storyboard x:Name="estadoHerido" x:Key="estadoHeridoKey">
			<!-- Reducir la opacidad para mostrar que está herido -->
			<DoubleAnimation
    Storyboard.TargetName="canvasPokemon"
    Storyboard.TargetProperty="Opacity"
    From="1" To="0.7" Duration="0:0:0.5"/>

			<!-- Aplanar la pupila derecha (PupilaDER) sin afectar la inclinación del ojo -->
			<DoubleAnimation
    Storyboard.TargetName="ScalePupilaDER"
    Storyboard.TargetProperty="ScaleY"
    From="1" To="0.05" Duration="0:0:1"/>

			<!-- Aplanar la pupila izquierda (PupilaIZQ) sin afectar la inclinación del ojo -->
			<DoubleAnimation
    Storyboard.TargetName="ScalePupilaIZQ"
    Storyboard.TargetProperty="ScaleY"
    From="1" To="0.05" Duration="0:0:1" />

			<!-- Giro sobre sí mismo del canvasPokemon -->
			<DoubleAnimation
    Storyboard.TargetName="rotateTransform"
    Storyboard.TargetProperty="Angle"
    From="-10" To="10" Duration="0:0:4" AutoReverse="True" RepeatBehavior="Forever"/>
		</Storyboard>
		<Storyboard x:Name="estadoCansado" x:Key="estadoCansadoKey">
			<ColorAnimation 
    BeginTime="00:00:00" 
    Storyboard.TargetName="PupilaIZQ" 
    Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
    From="White" 
    To="#FFFF99"
    Duration="0:0:3" />

			<DoubleAnimation 
    BeginTime="00:00:00" 
    Storyboard.TargetName="ScalePupilaIZQ" 
    Storyboard.TargetProperty="ScaleX"
    From="1" 
    To="0.5"
    Duration="0:0:3" />

			<DoubleAnimation 
    BeginTime="00:00:00" 
    Storyboard.TargetName="ScalePupilaIZQ" 
    Storyboard.TargetProperty="ScaleY"
    From="1" 
    To="0.5"
    Duration="0:0:3" />

			<ColorAnimation 
    BeginTime="00:00:00" 
    Storyboard.TargetName="PupilaDER" 
    Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
    From="White" 
    To="#FFFF99"
    Duration="0:0:3" />

			<DoubleAnimation 
    BeginTime="00:00:00" 
    Storyboard.TargetName="ScalePupilaDER" 
    Storyboard.TargetProperty="ScaleX"
    From="1" 
    To="0.5"
    Duration="0:0:3"  />

			<DoubleAnimation 
    BeginTime="00:00:00" 
    Storyboard.TargetName="ScalePupilaDER" 
    Storyboard.TargetProperty="ScaleY"
    From="1" 
    To="0.5"
    Duration="0:0:3" />
		</Storyboard>
		<Storyboard x:Name="animaciónAtaqueDébil" x:Key="AnimacionAtaquePokemon">
			<!-- Animación para mover el Pokémon hacia la derecha -->
			<DoubleAnimation 
    Storyboard.TargetName="translateTransform" 
    Storyboard.TargetProperty="X" 
    From="0" To="300" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="1x" />

			<!-- Animación para inclinar el Pokémon hacia atrás -->
			<DoubleAnimation 
    Storyboard.TargetName="rotateTransform" 
    Storyboard.TargetProperty="Angle" 
    From="0" To="-20" Duration="0:0:0.5" AutoReverse="True" RepeatBehavior="1x" />
		</Storyboard>
		<Storyboard x:Name="animaciónAtaqueFuerte">
			<!-- Animación para mover la bola de agua a la derecha -->
			<DoubleAnimation 
    Storyboard.TargetName="movBola" 
    Storyboard.TargetProperty="X" 
    From="0" To="650" Duration="0:0:3" AutoReverse="False" RepeatBehavior="1x" />

			<!-- Animación para hacer girar la bola de agua -->
			<DoubleAnimation 
    Storyboard.TargetName="rotBola" 
    Storyboard.TargetProperty="Angle" 
    From="0" To="360" Duration="0:0:1" AutoReverse="False" RepeatBehavior="4x" />

			<!-- Animación para aumentar el tamaño de la bola de agua -->
			<DoubleAnimation 
    Storyboard.TargetName="escalaBola" 
    Storyboard.TargetProperty="ScaleX" 
    From="0.2" To="1" Duration="0:0:2" AutoReverse="False" RepeatBehavior="1x" />
			<DoubleAnimation 
    Storyboard.TargetName="escalaBola" 
    Storyboard.TargetProperty="ScaleY" 
    From="0.2" To="1" Duration="0:0:2" AutoReverse="False" RepeatBehavior="1x" />

			<!-- Animación para cambiar la visibilidad de imBolaAgua -->
			<ObjectAnimationUsingKeyFrames 
    Storyboard.TargetName="imBolaAgua" 
    Storyboard.TargetProperty="Visibility">
				<!-- Al inicio del Storyboard, se pone en Visible -->
				<DiscreteObjectKeyFrame KeyTime="0:0:0">
					<DiscreteObjectKeyFrame.Value>
						<Visibility>Visible</Visibility>
					</DiscreteObjectKeyFrame.Value>
				</DiscreteObjectKeyFrame>
				<!-- Al finalizar el Storyboard (a 3 segundos) se vuelve a poner en Collapsed -->
				<DiscreteObjectKeyFrame KeyTime="0:0:3">
					<DiscreteObjectKeyFrame.Value>
						<Visibility>Collapsed</Visibility>
					</DiscreteObjectKeyFrame.Value>
				</DiscreteObjectKeyFrame>
			</ObjectAnimationUsingKeyFrames>
		</Storyboard>
		<Storyboard x:Name="movBase" AutoReverse="True" RepeatBehavior="Forever">
			<DoubleAnimation
    Storyboard.TargetName="translateTransform"
    Storyboard.TargetProperty="Y"
    From="0"
    To="-10"
    Duration="0:0:1" />
		</Storyboard>
		<Storyboard x:Name="animaciónEscudo" AutoReverse="False">
			<DoubleAnimation 
        Storyboard.TargetName="imBurbuja"
        Storyboard.TargetProperty="Opacity" 
        From="0" To="1" Duration="0:0:3" BeginTime="0:0:0"/>
		</Storyboard>
		<Storyboard x:Name="animaciónEscudoFin" AutoReverse="False">
			<DoubleAnimation 
         Storyboard.TargetName="imBurbuja"
         Storyboard.TargetProperty="Opacity" 
         From="1" To="0" Duration="0:0:3" BeginTime="0:0:0"/>
		</Storyboard>
		<Storyboard x:Name="animaciónDescanso" x:Key="AnimacionDescansoKey">
			<!-- Suavemente aumentar la opacidad para simbolizar recuperación -->
			<DoubleAnimation
    Storyboard.TargetName="canvasPokemon"
    Storyboard.TargetProperty="Opacity"
    From="0.7"
    To="1"
    Duration="0:0:3"
    AutoReverse="False"/>

			<!-- Un leve brillo en los ojos para indicar recuperación -->
			<ColorAnimation
    Storyboard.TargetName="PupilaIZQ"
    Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
    From="#87CEFA"
    To="White"
    Duration="0:0:3"/>

			<ColorAnimation
    Storyboard.TargetName="PupilaDER"
    Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
    From="#87CEFA"
    To="White"
    Duration="0:0:3"/>

			<!-- Suave movimiento ascendente-descendente para simular respiración profunda -->
			<DoubleAnimation
    Storyboard.TargetName="translateTransform"
    Storyboard.TargetProperty="Y"
    From="0"
    To="-5"
    Duration="0:0:2"
    AutoReverse="True"
    RepeatBehavior="3x"/>

			<DoubleAnimation
Storyboard.TargetName="halo"
Storyboard.TargetProperty="Opacity"
From="0"
To="0.8"
Duration="0:0:1.5"
AutoReverse="True"/>

			<DoubleAnimation
Storyboard.TargetName="haloScale"
Storyboard.TargetProperty="ScaleX"
From="1"
To="1.3"
Duration="0:0:1.5"
AutoReverse="True"/>

			<DoubleAnimation
Storyboard.TargetName="haloScale"
Storyboard.TargetProperty="ScaleY"
From="1"
To="1.3"
Duration="0:0:1.5"
AutoReverse="True"/>


		</Storyboard>

		<Storyboard x:Name="rotaciónOrejas" x:Key="RotateAnimation" RepeatBehavior="Forever">
			<!-- Animación para OrejaIZQCanvas -->
			<DoubleAnimation
        Storyboard.TargetName="OrejaIZQRotateTransform"
        Storyboard.TargetProperty="Angle"
        From="0" To="-5" Duration="0:0:1" AutoReverse="True"/>

			<!-- Animación para OrejaDERCanvas -->
			<DoubleAnimation
        Storyboard.TargetName="OrejaDERRotateTransform"
        Storyboard.TargetProperty="Angle"
        From="0" To="-5" Duration="0:0:1" AutoReverse="True"/>
		</Storyboard>
	</UserControl.Resources>


